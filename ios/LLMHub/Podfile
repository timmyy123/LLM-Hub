# Uncomment the next line to define a global platform for your project
platform :ios, '15.0'

target 'LLMHub' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # MediaPipe Tasks for GenAI (LLM Inference)
  pod 'MediaPipeTasksGenAI', '~> 0.10.14'
  
  # Optional: MediaPipe Tasks for Vision (for image understanding)
  # pod 'MediaPipeTasksVision', '~> 0.10.14'
  
  # Optional: MediaPipe Tasks for Audio (for audio processing)
  # pod 'MediaPipeTasksAudio', '~> 0.10.14'

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
  end
end
